<h1>All The Plans</h1>

<% @plans.each do |plan| %>
  <div>
  Name:<%= plan.name %>  
  When:<%= plan.time.strftime("%B %d at %I:%M %p")%>
  Where:<%= plan.restaurant %>
    Users:
      <% plan.users.each do |user| %>
      <%= user.name %>
      <%= link_to "Join", join_plan_path, :remote => true, :id =>  "join_plan_link" %>

    <% end %>
<% end %>
</div>
