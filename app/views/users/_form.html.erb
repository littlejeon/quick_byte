<div class="sessions">

  <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id = "error_explanation">
          <h2> <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2> 
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class = "name">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class = "avatar">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>      

      <div class = "email">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class = "password">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class = "password_confirmation">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class= "actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>