<%= form_for (@organization) do |f| %>
<div class="name-field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="location-field">
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>

<div class="logo-field">
  <%= f.label :logo_url %>
  <%= f.url_field :logo_url %>
</div>

<div class="domain-field">
  <%= f.label :domains, "Acceptable Domain" %>
  <%= f.text_field :domains, placeholder:"e.g. @flatironschool.com" %>
</div>

<%= f.submit %>
<% end %>



