  <div class="price">
    <li>
    Price: $<%= @restaurant.average("price") %>
    </li>
  </div>


  <div class="comment">
    <% @restaurant.reviews.each do |review| %>
      <% unless (review.user.nil?) || (review.comment.nil?) || (review.comment.empty? )%>
        <li> Comment by <%= link_to review.user.name, user_path(review.user) %>: <%= review.comment %> </li>
      <% end %>
    <% end %>
  </div>

  <ul>

