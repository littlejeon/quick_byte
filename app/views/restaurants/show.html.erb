
<h1> <%= @restaurant.name %> </h1>

<%= render 'reviews/form', {review: Review.new, restaurant: @restaurant} %>
<ul>
  <%#= binding.pry %>

  <li> Wait Time: <%= @restaurant.average_wait_time %> minutes </li>
  <li> Rating: <%= @restaurant.average_rating %> </li>
  <li> Price: $<%= @restaurant.average_price %> </li>

  <div class="comment">
    <% @restaurant.reviews.each do |review| %>
      <% unless review.comment.empty? %>
        <li> Comment by <%= review.user.name %>: <%=review.comment %> </li>
      <% end %>
    <% end %>
  </div>

</ul>
