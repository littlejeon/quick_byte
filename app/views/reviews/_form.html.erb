<h4>Add a Review</h4>

<%= form_for(review) do |f| %>

<div class="wait-field">
  <%= f.label :wait_time %>
  <%= f.number_field :wait_time %>
</div>

<div class="price-field">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>

<div class="rating-field">
  <%= f.label :rating %>
  <%= f.number_field :rating %>
</div>

<div class="comment-field">
  <%= f.label :comment %>
  <%= f.text_area :comment %>
</div>

<%= f.hidden_field :restaurant_id, :value => restaurant.id %>

<%= f.submit "Create" %>

<% end %>
