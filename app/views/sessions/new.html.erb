<div class="sessions">
  <h1>SIGN IN</h1>
  <%= form_tag sessions_path do %>
    <div class="name">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>

    <div class="email">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="password">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "SIGN IN" %>
  <% end %>
</div>